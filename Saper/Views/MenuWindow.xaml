<Window x:Class="Saper.Views.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Saper" 
        xmlns:local1="clr-namespace:Saper.Views" 
        xmlns:converters="clr-namespace:Saper.Converters"
        mc:Ignorable="d"
        Title="MenuWindow" Height="1080" Width="1920"
        WindowState="Maximized" WindowStyle="None">
    <local1:DpiDecorator>
    <Grid>
        <!--
            <Image Source="../Images/Background/Back4.jpg" Width="1920" Height="1080" Stretch="Fill"/>
            <Image Source="../Images/Icons/LOGOen.png" HorizontalAlignment="Center" VerticalAlignment="Top" Width="1300" Margin="0,75,0,0"/>-->
        <TextBlock Text="{Binding Help}" Margin="0 200 0 0" FontSize="32" Width="1920" TextAlignment="Center" Foreground="Red"/>

        <Canvas Visibility="{Binding PageVisibility[0], Converter={StaticResource BoolToVis}}" Width="500" Height="500">
            <Rectangle Fill="#A42a2c" Width="500" Height="500" Opacity="0.8" RadiusX="100" RadiusY="100"/>
            <DockPanel Canvas.Left="40" Canvas.Top="60">
                <Label FontSize="28" Width="150" Foreground="#F1ef42" FontFamily="Arial">Ім'я:</Label>
                <TextBox FontSize="34" FontFamily="{StaticResource IrpinType}" Width="250" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="25"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </DockPanel>
            <DockPanel Canvas.Left="40" Canvas.Top="160">
                <Label FontSize="28" Width="150" Foreground="#F1ef42" FontFamily="Arial">Пароль:</Label>
                <TextBox FontSize="28" Width="250" Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="25"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </DockPanel>
            <Button Canvas.Left="100" Canvas.Top="265" Width="300" Foreground="#F1ef42" Style="{StaticResource UnavailableButton}" Content="Увійти" Command="{Binding LogInCommand}"/>
            <StackPanel Canvas.Left="60" Canvas.Top="360">
                <Label FontSize="26" Foreground="#4B852B" FontFamily="Arial">Немає облікового запису?</Label>
                <TextBlock FontSize="26" TextAlignment="Center" Foreground="#FF1946B5" TextDecorations="Underline" Text="Зареєструватися">
                    <TextBlock.InputBindings>
                        <MouseBinding Gesture="LeftClick" Command="{Binding GoCommand}" CommandParameter="1"/>
                    </TextBlock.InputBindings>
                </TextBlock>
            </StackPanel>
            <Canvas.InputBindings>
                <KeyBinding Key="Esc" Command="{Binding CloseWindowCommand}"/>
                <KeyBinding Key="Enter" Command="{Binding LogInCommand}"/>
            </Canvas.InputBindings>
        </Canvas>

        <Canvas Visibility="{Binding PageVisibility[1], Converter={StaticResource BoolToVis}}" Width="600" Height="400">
            <Rectangle Fill="#ABBFAA" Width="600" Height="400" Opacity="0.6" RadiusX="35" RadiusY="35"/>

            <Grid>
                <Rectangle Fill="#ABBFAA" Width="1050" Margin="0 30" Opacity="0.6" RadiusX="35" RadiusY="35"/>
                <DataGrid ColumnHeaderHeight="64" Margin="0 50" HeadersVisibility="Column" Width="1024" Background="Transparent" RowBackground="Transparent"
                              AutoGenerateColumns="False" FontSize="32"  IsReadOnly="True" GridLinesVisibility="Vertical">
                    <DataGrid.Columns>
                        <DataGridTextColumn Width="250" Header="Перший гравець" />
                        <DataGridTextColumn Width="235" Header="Другий гравець" />
                        <DataGridTextColumn Width="215" Header="Переможець"/>
                        <DataGridTextColumn Width="305" Header="Вид перемоги" />
                    </DataGrid.Columns>
                    <DataGrid.Resources>
                        <Style TargetType="{x:Type DataGridColumnHeader}" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="BorderThickness" Value="0,0,1,0"/>
                            <Setter Property="BorderBrush" Value="Black"/>
                        </Style>
                    </DataGrid.Resources>
                </DataGrid>
            </Grid>
            <Canvas.InputBindings>
                <KeyBinding Key="Esc" Command="{Binding GoCommand}" CommandParameter="2"/>
            </Canvas.InputBindings>
        </Canvas>
    </Grid>
    </local1:DpiDecorator>
</Window>